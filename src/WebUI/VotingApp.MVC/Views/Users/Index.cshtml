@*@model List<YourProjectName.Models.User>*@

<h2>Kullanıcılar</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>E-Posta</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = user.UserId })">Düzenle</a> |
                    <a href="@Url.Action("Delete", new { id = user.UserId })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
